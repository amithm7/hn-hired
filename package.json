{
  "name": "hnhired",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "build:server": "esbuild --platform=node --format=cjs ./server.ts --outdir=build --bundle",
    "build:scripts": "esbuild scripts/*.ts --outdir=scripts --out-extension:.js=.mjs",
    "dev": "run-p dev:*",
    "dev:server": "cross-env NODE_ENV=development node --inspect --require ./node_modules/dotenv/config --require ./mocks ./build/server.js",
    "dev:build": "cross-env NODE_ENV=development npm run build:server -- --watch",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:css": "cross-env NODE_ENV=development npm run generate:css -- --watch",
    "docker": "docker-compose up -d",
    "format": "prettier --write .",
    "generate:css": "tailwindcss -o ./app/styles/tailwind.css",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "start": "cross-env NODE_ENV=production node ./build/server.js",
    "start:e2e:workflows": "cross-env NODE_ENV=production node --require ./mocks --require dotenv/config ./build/server.js",
    "test:e2e:dev": "npm run docker && sleep 3 && npm run test:pgrestore && DATABASE_URL=postgresql://test:test@localhost:5433/hnhired-test start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "test:pgdump": "env $(cat .env) postgres/dump.sh",
    "test:pgrestore": "./postgres/restore.sh",
    "typecheck": "tsc -b && tsc -b cypress",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run",
    "manual-get-latest": "npx --yes esbuild scripts/get-latest-story.server.ts --outdir=scripts --out-extension:.js=.mjs && node --experimental-modules scripts/get-latest-story.server.mjs manual",
    "server:scheduler": "cross-env NODE_ENV=production node --experimental-modules scripts/scheduler.server.mjs"
  },
  "prettier": {},
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@prisma/client": "^4.3.1",
    "@remix-run/express": "*",
    "@remix-run/node": "*",
    "@remix-run/react": "*",
    "@remix-run/server-runtime": "*",
    "@sentry/node": "^7.9.0",
    "@sentry/tracing": "^7.9.0",
    "bcryptjs": "^2.4.3",
    "clsx": "^1.2.1",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.1",
    "isbot": "^3.5.0",
    "lodash.debounce": "^4.0.8",
    "lodash.isequal": "^4.5.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.1",
    "p-limit": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "timeago.js": "^4.0.2",
    "tiny-invariant": "^1.2.0",
    "use-scrollable-ref": "^1.0.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@remix-run/dev": "*",
    "@remix-run/eslint-config": "*",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/dom": "^8.16.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.2.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/eslint": "^8.4.5",
    "@types/express": "^4.17.13",
    "@types/lodash.isequal": "^4.5.6",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.0.3",
    "@types/node-cron": "^3.0.2",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^2.0.0",
    "autoprefixer": "^10.4.9",
    "c8": "^7.11.3",
    "concurrently": "^7.4.0",
    "cookie": "^0.5.0",
    "cypress": "^10.3.0",
    "dotenv": "^16.0.1",
    "esbuild": "^0.14.49",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "happy-dom": "^6.0.3",
    "msw": "^0.44.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.12",
    "prisma": "^4.3.1",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.1.8",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.0",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "^0.18.0"
  },
  "engines": {
    "node": ">=16"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
